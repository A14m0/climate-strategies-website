---
import { Image } from "astro:assets";
const { image, title, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/partners/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[image])
  throw new Error(
    `"${image}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
// import imgReferene from image;
---

<div class="card">
  <div class="partnerImage">
    <!-- <img src={image} alt={title} /> -->
    <Image src={images[image]()} alt={title} widths={[344]} />
  </div>
  <!-- <h3 class="text-[14px] font-bold">{title}</h3> -->
  <!-- <p>{description}</p> -->
</div>
